{
  "name": "calderawp/database",
  "description": "A boilerplate for new composer based PHP projects.",
  "license": "GPL-2.0",
  "require": {
    "php": "^5.6|^7.0",
    "calderawp/caldera-containers": "^0.2",
    "inpsyde/wp-db-tools": "^0.2"
  },
  "autoload": {
    "psr-4": {
      "calderawp\\DB\\": "php"
    }
  },
  "require-dev": {
    "php": "^7.2",
    "mockery/mockery": "^1.2",
    "phpunit/phpunit": "^7.3"
  },
  "config": {
    "platform": {
      "php": "7.2"
    },
    "sort-packages": true
  },
  "autoload-dev": {
    "psr-4": {
      "calderawp\\caldera\\Db\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit tests",
    "tests-now": "phpunit tests --group=now",
    "sniffs": "phpcs src/ && phpcs src/",
    "fixes": "phpcbf src/ && phpcbf tests/"
  }
}
