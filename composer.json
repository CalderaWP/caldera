{
    "name": "calderawp/caldera",
    "license": "GPL-2.0",
    "require": {
        "php": "^7.2",
        "calderawp/caldera-containers": "^0.2",
        "inpsyde/wp-db-tools": "^0.2",
        "mockery/mockery": "^1.2",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "php": "^7.2",
        "brain/monkey": "^2.2",
        "calderawp/caldera-containers": "^0.2",
        "friendsofphp/php-cs-fixer": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^7.3",
        "spatie/phpunit-snapshot-assertions": "^1.3",
        "squizlabs/php_codesniffer": "3.*",
        "symplify/monorepo-builder": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "calderawp\\DB\\": "php-packages/db/src",
            "calderawp\\caldera\\Core\\": "php-packages/core/src",
            "calderawp\\caldera\\Events\\": "php-packages/events/src",
            "calderawp\\caldera\\Forms\\": "php-packages/forms/src",
            "calderawp\\caldera\\restApi\\": "php-packages/rest-api/src",
            "calderawp\\interop\\": "php-packages/interop/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "calderawp\\DB\\Tests\\Traits\\": "php-packages/caldera-db/Tests/Traits/",
            "calderawp\\DB\\Tests\\Unit\\": "php-packages/caldera-db/Tests/Unit/",
            "calderawp\\caldera\\Core\\Tests\\": "php-packages/core/tests",
            "calderawp\\caldera\\Core\\Tests\\Integration\\": "php-packages/core/tests/Integration",
            "calderawp\\caldera\\Core\\Tests\\Traits\\": "php-packages/core/tests/Traits",
            "calderawp\\caldera\\Core\\Tests\\Unit\\": "php-packages/core/tests/Unit",
            "calderawp\\caldera\\Db\\Tests\\": "php-packages/db/tests",
            "calderawp\\caldera\\Events\\Tests\\": "php-packages/events/tests",
            "calderawp\\caldera\\Forms\\Tests\\": "php-packages/forms/tests",
            "calderawp\\caldera\\restApi\\Tests\\": "php-packages/rest-api/tests",
            "calderawp\\interop\\Tests\\": "php-packages/interop/tests"
        }
    },
    "scripts": {
        "merge": "vendor/bin/monorepo-builder merge && composer update",
        "test": "composer fixes && composer test:core && composer test:packages",
        "tests": "composer test:integration  && composer test && composer test:integration",
        "test:integration": "cd php-packages/core && composer test",
        "snapshot:accept": "phpunit tests/ -d --update-snapshots",
        "fixes": "composer fixes:packages",
        "-test:packages": "calderawp\\caldera\\Cli\\TestPackages::callback",
        "-test:package": "calderawp\\caldera\\Cli\\TestPackage::callback",
        "test:core": "cd php-packages/core && composer test ",
        "test:packages-interop": "cd php-packages/interop && composer test ",
        "test:packages-rest": "cd php-packages/rest-api && composer test ",
        "test:packages-forms": "cd php-packages/forms && composer test ",
        "test:packages-events": "cd php-packages/events && composer test ",
        "fixes:packages": "cd php-packages/interop && composer fixes && cd ../ && pwd && cd forms && composer fixes && cd ../ && pwd && cd rest-api && composer fixes && cd ../ && pwd && cd events && composer fixes",
        "test:packages": "cd php-packages/interop && composer test && cd ../ && pwd && cd forms && composer test && cd ../ && pwd && cd rest-api && composer test && cd ../ && pwd && cd events && composer test",
        "analysis": "composer analysis:forms && analysis:events && analysis:rest && analysis:interop",
        "analysis:forms": "vendor/bin/phpstan analyse stan php-packages/forms/src",
        "analysis:events": "vendor/bin/phpstan analyse php-packages/events/src",
        "analysis:interop": "vendor/bin/phpstan analyse php-packages/interop/src",
        "analysis:rest": "vendor/bin/phpstan analyse php-packages/rest-api/src",
        "stan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    }
}
