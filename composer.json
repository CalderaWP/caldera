{
    "name": "calderawp/caldera",
    "license": "GPL-2.0",
    "require": {
        "php": "^7.2",
        "mockery/mockery": "^1.2",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "php": "^7.2",
        "calderawp/caldera-containers": "^0.2",
        "friendsofphp/php-cs-fixer": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^7.3",
        "squizlabs/php_codesniffer": "3.*",
        "symplify/monorepo-builder": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "calderawp\\caldera\\Forms\\": "php-packages/forms/src",
            "calderawp\\interop\\": "php-packages/interop/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "calderawp\\caldera\\Forms\\Tests\\": "php-packages/forms/tests",
            "calderawp\\interop\\Tests\\": "php-packages/interop/tests"
        }
    },
    "scripts": {
        "merge": "vendor/bin/monorepo-builder merge && composer update",
        "test": "composer test:packages",
        "fixes": "composer fixes:packages",
        "test:packages": "composer test:packages-interop && composer test:packages-forms",
        "test:packages-interop": "cd php-packages/interop && composer test ",
        "test:packages-forms": "cd php-packages/forms && composer test ",
        "fixes:packages": "cd php-packages/interop && composer fixes && cd ../ && pwd && cd forms && composer fixes"
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    }
}
