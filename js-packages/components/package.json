{
  "name": "@caldera-labs/components",
  "description": "Shared components",
  "version": "1.0.0",
  "author": "Josh Polllock",
  "license": "GPL-2.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "yarn test:watch",
    "test:watch": "jest --watch",
    "test:once": "jest -ci",
    "lint": "eslint 'src/**/*.js'",
    "del-dist": "del-cli dist",
    "prebuild": "yarn del-dist",
    "build": "babel src -d dist --ignore test.js,story.js,fixture.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x"
  },
  "devDependencies": {
    "@storybook/react": "^3.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "css-loader": "^0.28.11",
    "deepmerge": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "glob-loader": "^0.3.0",
    "jest": "^20.0.4",
    "react": "^16.7",
    "react-dom": "^16.7",
    "style-loader": "^0.21.0"
  },
  "jest": {
    "setupFiles": [
      "./config/jest/test-shim.js",
      "./config/jest/test-setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/config/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "dependencies": {
    "@storybook/addon-options": "^4.1.4",
    "@storybook/addons": "^4.1.4",
    "@wordpress/components": "^7.0.4",
    "@wordpress/compose": "^3.0.0",
    "@wordpress/editor": "^9.0.6",
    "@wordpress/element": "^2.1.8",
    "classnames": "^2.2.6",
    "deepmerge": "^3.0.0",
    "dot-prop": "^4.2.0",
    "formik": "^1.4.1",
    "jest-fetch-mock": "^2.1.0",
    "lodash": "^4.17.11",
    "lodash.flatmap": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "prop-types": "^15.6.2",
    "styled-components": "^4.1.3",
    "uuid": "^3.3.2"
  }
}
